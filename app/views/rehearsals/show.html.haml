.container
  .row
    .col-md-9
      .panel.stoic-blue
        .panel-heading
          %h3.page-header
            Rehearsal of
            = "#{@exercise.title}"
            %h4
              Originally rehearsed in
              %b 
                -if @rehearsal.city? 
                  = @rehearsal.city
                -else
                  Unknown City
              on
              %b
                = "#{@rehearsal.created_at.strftime("%B %d, %Y at %H:%M")}"
        .panel-body
          .col-md-10
            .panel.stoic-grey
              %h4
                %p= @exercise.general_description
            - @rehearsal.e_answers.each_with_index do |e_answer, index|
              %tr
                %h5.exercise_title
                  %th= e_answer.e_question.question
              %p
              %tr
                %p
                  %td= e_answer.answer
          %br
          = link_to "Back To #{@exercise.title}", @rehearsal.exercise, class: "btn btn-stoic-white"
          = link_to 'Edit This Rehearsal', edit_rehearsal_path(@rehearsal), class: "btn btn-stoic-white"
          %br
          %br
