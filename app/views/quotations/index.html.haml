.container
  .row
    %h2.page-header.quotation_title Stoic Quotations
    %h3.page-header.quotation_title.second_row_title
      .small
        Use these text passages from Stoic philosophers such as Seneca, Epictetus and the Roman Emperor and Stoic philosopher Marcus Aurelius (CE 121-180) to compare to your own daily thoughts and Stoic practice.

.container
  .row
    .panel.panel-primary
      %table.table.table-striped.table-responsive
        %tr
          %th
            %h4
              Important Quotations from Stoic Philosophers
          %th
          - @quotations.each do |quotation|
            %tr
              %td= link_to truncate(quotation.title, length: 55), quotation, class: "btn btn-primary"
              %td= raw quotation.tags.map(&:name).map { |t| link_to t, tag_path(t), class: "btn btn-default" }.join('  ')
              - if can? :update, quotation
                %td= quotation.created_at.strftime("%d %b. %Y")
                %td= link_to 'Edit', edit_quotation_path(quotation)
                %td= link_to 'Destroy', quotation, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br
      - if can? :update, @quotations
        = link_to 'New Quotation', new_quotation_path
