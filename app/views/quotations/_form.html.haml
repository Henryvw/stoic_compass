= form_for @quotation do |f|
  - if @quotation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quotation.errors.count, "error")} prohibited this quotation from being saved:"
      %ul
        - @quotation.errors.full_messages.each do |msg|
          %li= msg

  .field.stoic-dark-text
    = f.label :title
    = f.text_field :title
  .field.stoic-dark-text 
    = f.label :passage
    = f.text_area :passage, class: "form-control", rows: "4"
  .field
    = f.check_box :publish
    = f.label :publish_to_rehearsal_page
  .field
    = f.label :tag_list, "Category Tags"
    %br
    = f.label :tag_list, "(Separated by commas,"
    %br
    = f.label :tag_list, "e.g. Assent, Sex, Freedom) - Remember: always put the author tag FIRST as this will be displayed under source"
    = f.text_area :tag_list, class: "form-control", rows: "4"
  .actions
    = f.submit 'Save'
