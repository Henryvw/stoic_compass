= form_for @doctrine do |f|
  - if @doctrine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@doctrine.errors.count, "error")} prohibited this doctrine from being saved:"
      %ul
        - @doctrine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :explanation
    = f.text_area :explanation
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'
