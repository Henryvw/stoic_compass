= form_for @meditation do |f|
  - if @meditation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meditation.errors.count, "error")} prohibited this meditation from being saved:"
      %ul
        - @meditation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :passage
    = f.text_area :passage
  .actions
    = f.submit 'Save'
